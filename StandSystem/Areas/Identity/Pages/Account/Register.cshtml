@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="row">
    <div class="col-md-5 offset-md-4">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Создать новый аккаунт.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="form-floating mb-3 col-md-12">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.UserName" class="ms-2">Логин</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.FirstName" class="ms-2">Имя</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.LastName" class="ms-2">Фамилия</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Patronymic" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.Patronymic" class="ms-2">Отчество</label>
                    <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Group" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.Group" class="ms-2">Группа</label>
                    <span asp-validation-for="Input.Group" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="ms-2">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="ms-2">Подтвердите пароль</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
